@model PortoWork.Models.Project
@{
    ViewBag.Title = "Project Detail";
    Layout = "~/Views/Shared/_PortoLayout.cshtml";
}


<section id="projects-detal">
    <div class="head  ">
        <h1 class=" pull-right">Projects</h1>

    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-1 pull-left">
                    <a href="projects.html"><i class="fa fa-th fa-3x" aria-hidden="true"></i></a>
                </div>

                <div class="col-md-10 pull-left">
                    <h2>@Model.pro_name</h2>
                </div>

                <div class="col-md-1 pull-right">
                    <a href="#"> <i class="fa fa-chevron-left fa-3x" aria-hidden="true"></i></a>
                    <a href="#"> <i class="fa fa-chevron-right fa-3x" aria-hidden="true"></i></a>
                </div>
            </div>
            <div class="clear"></div>
            <hr>
            <div class="col-md-4">
                <img src="~/Content/img/1.jpg" alt="">
            </div>
            <div class="col-md-8">
                <p>@Model.pro_text</p>
                <div class="col-md-5">
                    <ul>
                        <li>
                            PROJECT LOCATION :
                            <p>@Model.City.city_name</p>
                        </li>
                        <li>
                            PROJECT TYPE:
                            <p>@Model.Service.serv_name</p>
                        </li>
                        <li>
                            PROJECT COST:
                            <p>@Model.cost</p>
                        </li>
                        <li>
                            CLIENT:
                            <p>@Model.User1.user_name</p>
                        </li>
                    </ul>
                </div>
                <div class="col-md-7">
                    <div class="progress">
                        <div class="progress-bar " role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width:81%">
                            81% Complete GENERAL PROGRESS
                        </div>
                    </div>
                    <div class="progress">
                        <div class="progress-bar " role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width:85%">
                            85% Complete PHASE 1
                        </div>
                    </div>
                    <div class="progress">
                        <div class="progress-bar " role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width:75%">
                            75% Complete PHASE 2
                        </div>
                    </div>
                    <div class="progress">
                        <div class="progress-bar " role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width:85%">
                            85% Complete PHASE 3
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>

